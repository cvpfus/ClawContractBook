{
  "name": "clawcontractbook",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @clawcontractbook/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "db:migrate": "pnpm --filter @clawcontractbook/database db:migrate",
    "db:generate": "pnpm --filter @clawcontractbook/database db:generate",
    "db:studio": "pnpm --filter @clawcontractbook/database db:studio"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "*",
      "@prisma/engines",
      "keccak",
      "prisma",
      "secp256k1"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
